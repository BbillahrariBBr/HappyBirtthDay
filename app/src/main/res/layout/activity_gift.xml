<us.egek.discrollview2.DiscrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:discrollve="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <us.egek.discrollview2.DiscrollViewContent
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="25dp"
            android:textSize="52sp"
            android:gravity="center"
            android:text="গিফট নিতে তোমার অনেক ভালোই লাগে তাই না!!" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimaryDark"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_threshold="0.3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="কেমন হতো যদি এইটা দিয়েই  অনেক গিফট পাওয়া যেত!?"
            android:textSize="18sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromTop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="তাহলে শুরু হয়ে যাক গিফট বক্স খোলা"
            android:textSize="18sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight|fromBottom" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            discrollve:discrollve_fromBgColor="#E57373"
            discrollve:discrollve_toBgColor="#B71C1C" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromRight|fromBottom"
            android:src="@drawable/gft2" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromLeft|fromTop"
            android:src="@drawable/gft3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            discrollve:discrollve_fromBgColor="#7B1FA2"
            discrollve:discrollve_toBgColor="#AB47BC" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="কেমন হতো যদি এদের একটিতে"
            android:textSize="18sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight|fromBottom" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromLeft|fromTop"
            android:src="@drawable/oppof5" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="25dp"
            android:textSize="52sp"
            android:gravity="center"
            android:text="আর অন্যটিতে" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromLeft|fromTop"
            android:src="@drawable/job" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Appoinment Letter থাকত"
            android:textSize="18sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight|fromBottom" />


        <View
