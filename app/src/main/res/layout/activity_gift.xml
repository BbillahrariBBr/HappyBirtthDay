            discrollve:discrollve_translation="fromRight|fromBottom" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            discrollve:discrollve_fromBgColor="#8BC34A"
            discrollve:discrollve_toBgColor="#689F38" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="এতে আছে"
            android:textSize="18sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight|fromBottom" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromLeft|fromTop"
            android:src="@drawable/gfto1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="দোয়া ও শুভ কামনা"
            android:textSize="18sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight|fromBottom" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromLeft|fromTop"
            android:src="@drawable/gfto2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="আর এটাতে"
            android:textSize="18sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight|fromBottom" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromLeft|fromTop"
            android:src="@drawable/heart" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="এইটা কিন্তু আমার না"
            android:textSize="18sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight|fromBottom" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromLeft|fromTop"
            android:src="@drawable/emo1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="25dp"
            android:textSize="52sp"
            android:gravity="center"
            android:text="এবং অবশেষে আবার ও" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
